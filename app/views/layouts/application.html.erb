<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>
  <body>

    <div id="flex-content-container" style="margin-bottom: 100px; min-height: 600px;">

      <!-- Navbar -->
      <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-md-0" style="color: white;">

            <li class="nav-item">
              <%= link_to 'See all courses', courses_path, class: 'nav-link' %>
            </li>
            
            <% if user_signed_in? %>

              <li class="nav-item">
                <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
              </li>

              <li class="nav-item">
                <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>

            <% else %>

              <li class="nav-item">
                <%= link_to 'Log In', new_user_session_path, class: 'nav-link' %>
              </li>

              <li class="nav-item">
                <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
              </li>

            <% end %>
            
          </ul>
        </div>
      </nav>

      <% if notice.present? %>
        <p class="notice alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>

    </div>


      <br class="clr">

       <div id="footer">
      <div class="container">
            <div class="row">
                <div class="col-12 col-sm-3">
                  <b>Teachers</b>
                  <br />
                  <%= link_to 'Teach a Course', new_instructor_course_path %>
                  <br />
                  <%= link_to 'My Dashboard', dashboard_path %>
                </div>

                <div class="col-12 col-sm-3">
                  <b>About</b>
                  <br />
                  <%= link_to 'Team', team_path %>
                  <br />
                  <%= link_to 'Careers', careers_path %>
                  <br />
                  <%= link_to 'Privacy Policy', privacy_path %>
                </div>

                <div class="col-12 col-sm-3">
                  <b>Contact</b>
                  <br />
                  AKDonnelly@gmail.com
                  <br />
                  One Kendall Square
                  <br />
                  Cambridge MA, 02113
                </div>

                <div class="col-12 col-sm-3 social">
                  <b>Social</b>
                    <br />
                    <br />
                      <%= link_to 'https://github.com/txcany' do %>
                      <span class="fa fa-github-square fa-2x social-button"></span>
                      <% end %>
                      <%= link_to 'https://www.facebook.com/BTheCode' do %>
                      <span class="fa fa-facebook-square fa-2x social-button"></span>
                      <% end %>
                      <%= link_to 'https://www.twitter.com/BeTheCode1' do %>
                      <span class="fa fa-twitter-square fa-2x social-button"></span>
                      <% end %>
               </div>
           </div>
      </div>
    </div> 

        
      <script src="https://vjs.zencdn.net/5.12.6/video.js"></script>
      <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

    </body>
</html>
