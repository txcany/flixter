<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
      <img src="<%= current_course.image %>" class="img-fluid">
    <br />
      <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning float-right' %>
       <br class="clr" />  

     
        <br />


      <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
  </div>
  <br>

   <ul class="sections">
    <% current_course.sections.each do |section| %>


      <li class="section-li">

        <div class="header">
           <span class="fa fa-ellipsis-v"></span>
          <%= section.title %>
            <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-sm float-right new-lesson-button' %>

        </div>

                <br class="clr"/> 
          

          <ul class="lessons">

            <% section.lessons.each do |lesson| %>
              <div class="row">
                <div class="col-1">
                  <br />
                  <span class="fa fa-ellipsis-v"></span>
                </div>
                <div class="col-11 text-center">
                  <p>
                    <b><%= lesson.title %></b>
                  </p>
                  <p>
                    <%= lesson.subtitle %>
                  </p>
                </div>
              </div>
              <br class="clr"/>
           <% end %>
         </ul>
         <br class="clr" />

      </li>
    <% end %>
  </ul>
</div>