<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />


  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course) %>
  <img src="<%= course.image %>" class="img img-fluid rounded " style="max-width: 400px; max-height:  300px;">
      </h2>
      <br />
        <div class="row">
        <div class="col-sm-8 col-12">
          <%= course.description %>
          
            </div>
            <div class="col-sm-4 col-12 text-center">
         <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
        </div>
      </div>
      <br class="clr" />
    <% end %>
</div>